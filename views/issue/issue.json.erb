<%
@json_response = true

issue = YAML.load_file(File.expand_path("../issue.yaml", __FILE__))

issue["pages"] = issue["items"].reduce([]) do |result, item|

  result << item["handle"] #.gsub('/issue/', '')

  if item["pages"]
    result += item["pages"].map{|p| p["handle"] }
  end

  result
end
%>

<%= issue.to_json %>
