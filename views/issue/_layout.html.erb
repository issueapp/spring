  <head>
    <meta charset="utf-8">
    <title>issue</title>

    <!-- http://t.co/dKP3o1e -->
    <meta name="HandheldFriendly" content="True">
    <meta name="MobileOptimized" content="320">
    <meta name="viewport" content="width=device-width,minimum-scale=1.0,maximum-scale=1.0" />
    <link rel="shortcut icon" href="/favicon.ico">
    
    <!--iOS -->
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="black">
    
    <link rel="stylesheet" href="/stylesheets/application.css" type="text/css">
    <style>

      nav.toc ul {
        z-index: 2;
        position: absolute;
        left: 0;
        right: 0;
        top: 30px;
        width: 100%;
        height: 220px;
        overflow-x: auto;
        padding: 0 3px;
        list-style-type: none;
        white-space: nowrap;
        display: none;
        
      }
      
      nav.toc label {
        position: absolute;
        z-index: 1;
        margin: 10px;
        padding: 10px 30px;
        border: 1px solid #ccc;
        background: #eee;
        text-transform: uppercase;
      }
      nav.toc input {
        display: none;
      }
      nav.toc input:checked + ul {
        display: block;
      }
      
      nav.toc li a {
/*        display: inline-block;
        width: 16.6%;
        height: 100px;
        text-align: center;
        vertical-align: center;
        background: #999;
        color: white;*/
        background: #333;
        color: white;
        font-size: 20px;
        display: inline-block;
        text-align: center;
        vertical-align: center;
        
        margin: 30px 15px;
        width: 200px;
        
        line-height: 150px;
        height: 150px;
        text-overflow: ellipsis;
        background-position: center;
        background-size: cover;
        vertical-align: middle;
      }
      
      /*
          Dynamic layout
      */
      body {
        background: #eee;
      }
      [role=main] .page { 
        background-color: #fff;
      /*  width: 1024px;*/
      }

      .two-column.paginate .body, .three-column.paginate .body {
        width: 1024px;
      }
      
      .two-column .top-image {
        width: 512px;
      }
      
      .three-column .top-image {
        width: 682.6px;
      }
      
      .debug {
        position: absolute;
        right: 0;
        top: 0;
        color: black;
      }
      
      .debug a {
        color: orange;
      }
      .debug div{
        max-width: 500px;
        padding: 40px;
        background: #eee;
        border: 1px solid #ccc;
        margin: 40px auto;
      }
    </style>
  </head>
  
  <body class="fashion-theme">
    <nav class="toc" role="secondary">
      <label for="menu">
        Issue
      </label>
      <input type="checkbox" id="menu" value="toggle" onchange=""/>      
      <ul>
        <% { "Cover"=> "/issue", "Contents"=> "/issue/contents" }.merge(issue_contents).each do |text, link| %>
        <li><%= link_to text, link %></li>
        <% end %>
      </ul>
      
    </nav>
    
    <div role=main class="content-view">
      <%= yield %>    
    </div>

  </body>
  <script src="//ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
  <script src="/javascripts/spring.ui.js"></script>
</html>