  <head>
    <meta charset="utf-8">
    <title>issue</title>

    <!-- http://t.co/dKP3o1e -->
    <meta name="HandheldFriendly" content="True">
    <meta name="MobileOptimized" content="320">
    <meta name="viewport" content="width=device-width,minimum-scale=1.0,maximum-scale=1.0" />
    <link rel="shortcut icon" href="/favicon.ico">

    <!--iOS -->
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="black">

    <link rel="stylesheet" href="/stylesheets/application.css" type="text/css">
    <style>

      #issue-viewer {
        position: relative;
        overflow: auto;
        margin: 40px auto 0;
        width: 1024px;
        height: 768px;
        border: 1px solid #ddd;
        background: #fff;
      }

      .page {
        width: 100%;
        height: 100%;
      }

      nav.toc ul {
        display: none;
        overflow-x: auto;
        width: 100%;
        height: 200px;
        background: #666;
        list-style-type: none;
        white-space: nowrap;
      }

      nav.toc label {
        position: absolute;
        z-index: 1;
        margin: 20px 20px 0;
        color: white;
      }

      nav.toc input {
        display: none;
      }

      nav.toc input:checked + ul {
        display: block;
      }

      nav.toc li a {
        display: inline-block;

        overflow: hidden;
        margin: 30px 15px;
        width: 150px;
        height: 120px;
        background: #333;
        background-position: center;
        background-size: cover;
        color: white;
        vertical-align: center;
        vertical-align: middle;
        text-align: center;
        text-overflow: ellipsis;

        font-size: 18px;
        line-height: 120px;
      }

      /*
          Dynamic layout
      */
      body {
        background: #eee;
      }

      [role=main] .page {
        width: 1024px;
        height: 768px;
      }

      #issue-viewer.portrait {
        width: 768px;
        height: 1024px;
      }

      #issue-viewer.portrait .page {
        width: 768px;
        height: 1024px;
      }

      .two-column.paginate .content, .three-column.paginate .content {
        width: 100%;
      }

      .two-column .top-image {
        width: 100%;
      }

      .two-column.align-right .cover-area {
        float: right;
      }

      .two-column.paginate.align-right header {
        break-after: column;
        -webkit-column-break-after: always;
      }

      .two-column.paginate.align-right .body {
        break-before: column;
        -webkit-column-break-before: always;
      }

      .three-column .top-image {
        width: 66.66%;
      }

      /*
          Dynamic layout
      */

      /*
        Adding overflow to #issue-view's parent can fix margin collapse
      */
      .content-view {
        overflow: auto;
      }

      .debug {
        position: absolute;
        top: 0;
        right: 0;
        z-index: 1;
        display: none;
        padding: 20px;
        background-color: #333;
        color: white;
        text-align: left;
      }

      .debug.active {
        display: block;
      }

      .debug ul {
        float: left;
        margin: 0;
        padding: 10px;
      }

      .debug .params {
        float: right;
      }

      .debug a {
        color: orange;
      }
    </style>
  </head>

  <body class="fashion-theme">
    <div role=main class="content-view">

      <div style="padding: 10px">
        <button class="button outline" onclick="$('#issue-viewer').toggleClass('portrait')">orientation</button>
        <!-- <button class="button outline" onclick="">edit</button> -->

        <label for="menu" class="button outline">Issue</label>
        <button class="button outline" onclick="$('.debug').toggleClass('active')">Debug</button>
        <button class="button outline" onclick="$('article.page').toggleClass('paginate').toggleClass('scroll')">Paginate</button>
      </div>

      <nav class="toc dark-theme" role="secondary">
        <input type="checkbox" id="menu" value="toggle" onchange=""/>

        <ul>
          <% issue_contents(true).each do |page| %>
          <li><a href="<%= page.url %>"><%= page.title %></a></li>
          <% end %>
        </ul>
      </nav>

      <div id="issue-viewer" class="">
        <%= yield %>
      </div>
    </div>

  </body>
  <script src="//ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
  <script src="/javascripts/spring.ui.js"></script>
</html>
