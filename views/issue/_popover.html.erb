<style>
  body.stop-scrolling,
  article.page .content.stop-scrolling {
    overflow: hidden;
  }

  .product-popover {
    position: fixed;
    bottom: -260px;
    left: 0;
    display: block;
    -webkit-box-sizing: border-box;
    -moz-box-sizing: border-box;
    box-sizing: border-box;
    padding: 1px;
    padding-bottom: 60px;
    width: 100%;
    height: 260px;
    background-color: rgba(50, 50, 50, 1);
    box-shadow: 2px 0 10px #000;
    opacity: 0;
  }

  @-webkit-keyframes show {
    0% {
      opacity: 0;
      -webkit-transform: translateY(0px);
    }
    100% {
      opacity: 1;
      -webkit-transform: translateY(-100%);
    }
  }

  @-webkit-keyframes hide {
    0% {
      opacity: 1;
      -webkit-transform: translateY(-100%);
    }
    100% {
      opacity: 0;
      -webkit-transform: translateY(0px);
    }
  }

  .product-popover.show {
    -webkit-animation: show 0.35s forwards;
    animation: show 0.35s forwards;
  }

  .product-popover.hide {
    -webkit-animation: hide 0.35s forwards;
    animation: hide 0.35s forwards;
  }

  .product-popover .details {
    overflow: scroll;
    padding: 20px;
    height: 200px;
  }

  .product-popover .thumb-image {
    float: left;
    margin: 0 15px 10px 0;
    width: 100px;
    height: 120px;
    outline: 1px solid #ddd;

    background-image: url('http://lorempixel.com/200/154');
    background-position: center;
    background-size: cover;
    background-repeat: no-repeat;
    vertical-align: top;
  }

  .product-popover .details .title,
  .product-popover .details .subtitle {
    display: -webkit-box;
    overflow : hidden;
    text-overflow: ellipsis;
    white-space: normal;

    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
  }

  .product-popover .details .title {
    font-size: 16px;
    font-family: "proxima_nova_bold";
  }

  .product-popover .details .subtitle {
    color: white;
    font-size: 14px;
  }

  .product-popover .details .description {
    clear: none;
    margin-top: 0;
    font-size: 14px;
    font-family: proxima_nova_regular;
    line-height: 1.3;
  }

  .product-popover .actions {
    position: absolute;
    bottom: 0;
    left: 0;
    overflow: hidden;
    min-height: 40px;
    max-height: 240px;
    width: 100%;
    background: linear-gradient(to bottom, rgba(0,0,0,0.1) 0%,rgba(50,50,50,1), rgba(50,50,50,1) 100%);
    color: white;
    vertical-align: middle;
    text-align: right;
    white-space: normal;
  }

  .product-popover .actions .button {
    margin-top: 10px;
    border: none;
    text-transform: uppercase;
    letter-spacing: 1px;
  }

  @media only screen and (min-width: 768px) {
    .product-popover {
      position: absolute;
      top: 50%;
      right: 20px;
      left: initial;
      display: none;
      width: 480px;
      height: 260px;
      opacity: 1;
    }

    .arrow {
      position: absolute;
      width: 0;
      height: 0;
    }

    .arrow.up {
      top: -10px;
      border-right: 10px solid transparent;
      border-bottom: 10px solid rgba(50, 50, 50, 1);
      border-left: 10px solid transparent;
    }

    .arrow.down {
      bottom: -10px;
      border-top: 10px solid rgba(50, 50, 50, 1);
      border-right: 10px solid transparent;
      border-left: 10px solid transparent;
    }

    .arrow.left {
      left: 100px;
    }

    .arrow.right {
      right: 100px;
    }

    .product-popover.show {
      display: block;
      -webkit-animation: initial;
      animation: initial;
    }

    .product-popover.hide {
      display: none;
      -webkit-animation: initial;
      animation: initial;
    }

    .product-popover .details .description {
      white-space: normal;
    }
  }
</style>

