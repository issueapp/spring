<style>
  .page.has-product.no-image .cover-area {
    padding: 10px;
    min-height: initial;
    width: 100%;
    height: 75%;
  }

  .page.has-product header .title {
    letter-spacing: 2px;
    font-weight: normal;
    font-size: 24px;
    font-family: "proxima_nova_bold";
  }

  .page.has-product header .category {
    color: #666;
    text-transform: uppercase;
    letter-spacing: 2px;
    font-size: 12px;
    font-family: "proxima_nova_bold";
  }

  .page.has-product .content h3 {
    text-align: left;
    text-transform: uppercase;
    font-weight: normal;
    font-family: "EB Garamond";
  }

  .page.has-product .product-set {
    -webkit-box-sizing: border-box;
    -moz-box-sizing: border-box;
    box-sizing: border-box;
    margin: 0;
    padding: 5% 0;
    list-style-type: none;
    white-space: normal;
  }

  .page.has-product .product-set li {
    position: relative;
    display: inline-block;
    -webkit-box-sizing: border-box;
    -moz-box-sizing: border-box;
    box-sizing: border-box;
    padding: 5px;
    height: 140px;
    vertical-align: middle;
    text-align: center;
  }

  .page.has-product .product-set li img {
    max-width: 100%;
    max-height: 100%;
  }

  .page.has-product .product-set li .tag {
    position: absolute;
    bottom: 0;
    left: 50%;
    margin-left: -15px;
    width: 30px;
    height: 30px;
    border-radius: 50%;
    background-color: #333;
    color: white;
    text-align: center;
    font-weight: bold;
    line-height: 1.8;
  }

  .page.has-product .product-set.set-2 li {
    width: 100%;
    height: 50%;
  }

  .page.has-product .product-set.set-4 li {
    width: 49%;
    height: 50%;
  }

  .page.has-product .product-set.set-6 li {
    width: 49%;
  }

  @media only screen and (min-width: 768px) {
    .page.has-product.cover-left .cover-area,
    .page.has-product.cover-right .cover-area {
      position: absolute;
      top: 0;
      right: initial;
      bottom: initial;
      left: initial;
      width: 50%;
      height: 100%;
    }

    .page.has-product.cover-left .content,
    .page.has-product.cover-right .content {
      overflow: auto;
      height: 100%;
    }


    .page.has-product.cover-left .cover-area {
      left: 0;
    }

    .page.has-product.cover-left .content {
      float: right;
    }

    .page.has-product.cover-right .cover-area {
      right: 0;
    }

    .page.has-product.cover-right .content {
      float: left;
    }
  }

  @media only screen and (min-width: 768px) and (orientation: portrait) {
    .page.has-product.no-image .content {
      width: 100%;
    }

    .page.has-product.no-image .product-set li {
      height: 220px;
    }

    .page.has-product.no-image .product-set.set-6 li {
      width: 30%;
    }
  }

  @media only screen and (min-width: 768px) and (orientation: landscape) {
    .page.has-product .product-set li {
      height: 220px;
    }

    .page.has-product .product-set.set-6 li {
      width: 49%;
    }

    /* NOTE: Unknown content disappear bug when using
             absolute position on orientation change. */
    .page.has-product.no-image .product-set {
      position: fixed;
      top: 0;
      right: initial;
      bottom: initial;
      left: initial;
      width: 50%;
      height: 100%;
    }

    .page.has-product.no-image.left .content {
      float: left;
    }

    .page.has-product.no-image.left .product-set {
      right: 0;
    }

    .page.has-product.no-image.right .content {
      float: right;
    }

    .page.has-product.no-image.right .product-set {
      left: 0;
    }
  }
</style>

