<style>
  .page.has-product .cover-area header {
    -webkit-box-sizing: border-box;
    -moz-box-sizing: border-box;
    box-sizing: border-box;
    padding: 5% 0 0;
    height: 10%;
  }

  .page.has-product .title {
    letter-spacing: 2px;
    font-weight: normal;
    font-size: 24px;
    font-family: "proxima_nova_bold";
  }

  .page.has-product .content h3 {
    text-transform: uppercase;
    font-weight: normal;
    font-family: "EB Garamond";
  }

  .page.has-product .product {
    -webkit-box-sizing: border-box;
    -moz-box-sizing: border-box;
    box-sizing: border-box;
    padding: 20px;
    width: 100%;
    height: 100%;
  }

  article.page.has-product header {
    -webkit-box-sizing: border-box;
    -moz-box-sizing: border-box;
    box-sizing: border-box;
    margin: 0;
    padding: 5% 0 0;
    height: 10%;
  }

  .page.has-product header .category {
    color: #666;
    text-transform: uppercase;
    letter-spacing: 2px;
    font-size: 12px;
    font-family: "proxima_nova_bold";
  }

  .page.has-product .product-set {
    -webkit-box-sizing: border-box;
    -moz-box-sizing: border-box;
    box-sizing: border-box;
    margin: 0;
    padding: 0 0 20px;
    list-style-type: none;
    white-space: normal;
  }

  .page.has-product .product-set.set-2 {
    height: 30%;
  }

  .page.has-product .product-set.set-4 {
    height: 60%;
  }

  .page.has-product .product-set.set-4 li {
    height: 50%;
  }

  .page.has-product .product-set.set-6 {
    height: 90%;
  }

  .page.has-product .product-set.set-6 li {
    height: 33.33%;
  }

  .page.has-product.align-right.no-image .set-6 {
    padding: 40px;
    height: 100%;
  }

  .page.has-product .product-set li {
    position: relative;
    display: inline-block;
    -webkit-box-sizing: border-box;
    -moz-box-sizing: border-box;
    box-sizing: border-box;
    padding: 10px 5px;
    width: 49%;
    height: 100%;
    text-align: center;
  }

  .page.has-product .product-set li img {
    max-width: 100%;
    max-height: 100%;
    /*height: 100%;*/
    vertical-align: middle;
  }

  .page.has-product .product-set li .tag {
    position: absolute;
    bottom: 0;
    left: 50%;
    margin-left: -13px;
    width: 26px;
    height: 26px;
    border-radius: 50%;
    background-color: #000;
    color: white;
    text-align: center;
    font-weight: bold;
    line-height: 1.6;
  }

  #issue-viewer.portrait .page.has-product .col.half {
    width: 100%;
    height: 49.99%;
  }

  #issue-viewer.portrait .page.has-product .product header {
    height: 15%;
  }

  #issue-viewer.portrait .page.has-product .product-set {
    height: 100%;
  }

  #issue-viewer.portrait .page.has-product .col.half .product-set li {
    width: 33.33%;
    height: 50%;
  }
</style>

