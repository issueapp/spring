<style>
  nav[role=navigation] {
    position: absolute;
    top:0;
    left:0;
    width:100%;
  }
  
 .cover {
    position:relative;
    height: 200%; 
    width: 200%;
    top: -50%;
    left: -50%;
  }
  
  .cover img {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    margin: auto;
    min-width: 51%;
    min-height: 50%;
  }
</style>

<div id="hero" style="display:none;">
  <h1>Start your personalised shopping catalogue</h1>
  <a href="/signup" class="button blue large">Sign up for an invite</a>
  <div class="stream-header">
    <span>Trending</span>
  </div>
</div>

<% if params[:version] %>
  <%= render "section/#{params[:version]}" %>
<% else %>
  <%= render "section/v1" %>
<% end %>