<style>

  html, body {
    overflow: hidden;
  }

  [role=main] {
    position: relative;
    margin-top: 50px;
  }
  
  nav[role=navigation] {
    position: absolute;
    top:0;
    left:0;
    width:100%;
  }

  .cover {
    position:relative;
    height: 200%; 
    width: 200%;
    top: -50%;
    left: -50%;
  }

  .cover img {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    margin: auto;
    min-width: 51%;
    min-height: 50%;
  }

  .cover.bottom {
    top: -90%;
  }

  #pages {
    position: absolute;
    white-space: nowrap;
    overflow: hidden;
    /* margin-top: 55px; */
  }
  
  #content {
    position: absolute;
    white-space: nowrap;
  }

  .scrollable {
    display: inline-block;
    overflow: hidden;
  }

  .page {
    position: relative;
    display: inline-block;
    width: 1024px;
    height: 748px;
    margin: 0;
    padding: 5px;
    -webkit-box-sizing: border-box;
    box-sizing: border-box;
    white-space: normal;
    overflow: hidden;
    background-size: cover;
    background-position: center;
    border: 1px solid #fff;
  }

  .page.current {
    border: 1px solid red;
  }
  
  /*
  .page {
    visibility: hidden;
  }

