  <head>
    <meta charset="utf-8">
    <title>issue</title>

    <!-- http://t.co/dKP3o1e -->
    <meta name="HandheldFriendly" content="True">
    <meta name="MobileOptimized" content="320">
    <meta name="viewport" content="width=device-width,minimum-scale=1.0,maximum-scale=1.0" />
    <link rel="shortcut icon" href="/favicon.ico">

    <!--iOS -->
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="black">

    <link rel="stylesheet" href="/stylesheets/application.css" type="text/css">
    <style>
      nav.toc {
        width: 1024px;
        margin:0;
      }
      
      nav.toc ul {

        display: none;
        overflow-x: auto;
        width: 100%;
        height: 160px;
        background: #666;
        list-style-type: none;
        white-space: nowrap;
      }

      nav.toc label {
        position: absolute;
        z-index: 1;
        margin: 20px 20px 0;
        color: white;
      }

      nav.toc input {
        display: none;
      }

      nav.toc input:checked + ul {
        display: block;
      }

      nav.toc li a {
        display: inline-block;

        overflow: hidden;
        margin: 20px 15px;
        width: 130px;
        height: 120px;
        background: #333;
        background-position: center;
        background-size: cover;
        color: white;
        vertical-align: center;
        vertical-align: middle;
        text-align: center;
        text-overflow: ellipsis;

        font-size: 18px;
        line-height: 120px;
      }

      /*
          Dynamic layout
      */
      body {
        background: #eee;
      }

      #issue-viewer {
        position: relative;
        overflow: auto;
        margin: 40px auto 0;
        width: 1024px;
        height: 768px;
/*        border: 1px solid #ddd;*/
        background: #fff;
      }

      #issue-viewer.portrait {
        width: 768px;
        height: 1024px;
      }

      #issue-viewer.portrait .page {
        width: 768px;
        height: 1024px;
      }

      #issue-viewer.mobile {
        width: 320px;
        height: 568px;
      }

      #issue-viewer.mobile .page {
        width: 320px;
        height: 568px;
      }

      #issue-viewer.mobile .debug ul {
        float: none;
        padding: 0;
        width: 100%;
      }

      #issue-viewer.mobile .debug .params {
        float: none;
        overflow: auto;
        width: 100%;
      }
      
      /*
          Dynamic layout
      */

      /*
        Adding overflow to #issue-view's parent can fix margin collapse
      */
      .debug {
        position: absolute;
        top: 0;
        right: 0;
        z-index: 1;
        display: none;
        padding: 20px;
        background-color: #333;
        color: white;
        text-align: left;
        width: 100%;

        -webkit-box-sizing: border-box;
        -moz-box-sizing: border-box;
        box-sizing: border-box;
      }

      .debug.active {
        display: block;
      }

      .debug ul {
        float: left;
        margin: 0;
        padding: 10px;
      }

      .debug .params {
        float: right;
      }

      .debug a {
        color: orange;
      }

    </style>
  </head>

  <body class="fashion-theme">
    <div role=main class="content-view">

      <div style="padding: 10px">
        <button class="button outline" onclick="$('#issue-viewer').toggleClass('mobile')">mobile</button>
        <button class="button outline" onclick="$('#issue-viewer').toggleClass('portrait')">orientation</button>
        <!-- <button class="button outline" onclick="">edit</button> -->

        <label for="menu" class="button outline">Issue</label>
        <button class="button outline" onclick="$('.debug').toggleClass('active')">Debug</button>
        <button class="button outline" onclick="$('article.page').toggleClass('paginate').toggleClass('scroll')">Paginate</button>
      </div>

      <iframe id="issue-viewer" src="/issue/index" frameborder="0"></iframe>
      
      <nav class="toc dark-theme" role="secondary">
        <input type="checkbox" id="menu" value="toggle" onchange=""/>
        <ul>
          <% issue_contents(true).each do |page| %>
          <li><a href="<%= page.url %>" target="issue-viewer"><%= page.title %></a></li>
          <% end %>
        </ul>
      </nav>
    </div>

  </body>
  <script src="//ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
  <script src="/javascripts/spring.ui.js"></script>
</html>
